# RunV2 Environment Variables
# Copy to .env and fill in your values

# Garmin Connect (unofficial API)
GARMIN_EMAIL=your.email@example.com
GARMIN_PASSWORD=your_password

# OpenAI (for Whisper transcription in standard privacy mode)
OPENAI_API_KEY=sk-...

# Database path (default: ./data/coach.db)
DATABASE_PATH=./data/coach.db

# Run notes path (iCloud folder for iOS Shortcuts)
# macOS: ~/Library/Mobile Documents/com~apple~CloudDocs/RunV2/run-notes
RUN_NOTES_PATH=~/Library/Mobile Documents/com~apple~CloudDocs/RunV2/run-notes

# Privacy mode: strict | standard | verbose
# strict = local transcription only
# standard = external APIs OK with redaction
# verbose = full logging (dev only)
PRIVACY_MODE=standard

# Timezone (used for local date calculations)
TIMEZONE=America/Los_Angeles
